<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/satisfy_regular"
            android:text="Children Mode"
            android:textAlignment="center"
            android:textColor="#050505"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold" />

        <TextView
            android:layout_width="396dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/source_sans_italic"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="It is used to secure  mobile phone from your children from using dangerous apps. And if your children is trying to use those apps that you restrict, then it gives notification on your mobile."

            android:textAlignment="center"
            android:textColor="#9e9e9e"

            android:textSize="@dimen/slide_desc" />

        <ImageView
            android:layout_width="407dp"
            android:layout_height="560dp"
            android:scaleType="fitXY"
            android:src="@drawable/children_image" />

    </LinearLayout>

</RelativeLayout>