<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel Mode"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:fontFamily="@font/satisfy_regular"
            android:textColor="#050505"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold" />

        <TextView
            android:layout_width="468dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/source_sans_italic"
            android:paddingLeft="@dimen/desc_padding"
            android:paddingRight="@dimen/desc_padding"
            android:text="It protects your phone from theft when you are traveling. If someone is trying to stole your mobile phone from your pocket, then the direction of phone will change and the siren gets starts. It will also send the location of your mobile on WhatsApp or email."
            android:textAlignment="center"
            android:textColor="#9e9e9e"

            android:textSize="@dimen/slide_desc" />

        <ImageView
            android:layout_width="430dp"
            android:layout_height="match_parent"
            android:paddingBottom="50dp"
            android:scaleType="fitEnd"
            android:src="@drawable/travel_image" />

    </LinearLayout>

</RelativeLayout>