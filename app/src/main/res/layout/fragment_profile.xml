<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0faff"
    tools:context=".ui.help.HelpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:src="@drawable/profile"
            android:layout_marginTop="25dp"
            android:layout_marginStart="16dp"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Priyansh \nRajput"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:textSize="20dp"
            android:fontFamily="@font/source_sans_italic"
            android:textColor="#000000"
            android:layout_toRightOf="@id/ivProfile"/>
        <TextView
            android:id="@+id/Edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Edit Profile"
            android:layout_marginTop="110dp"
            android:layout_marginStart="16dp"
            android:textSize="15dp"
            android:textColor="#2196f3"
            android:layout_below="@id/ivProfile"/>

        <TextView
            android:id="@+id/Emergency_Number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Emergency Number"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/source_sans_italic"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@id/Edit_profile"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Saved Photos"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/source_sans_italic"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_below="@id/Emergency_Number"/>



    </RelativeLayout>
</androidx.core.widget.NestedScrollView>